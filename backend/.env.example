# AI Trading SIGMA - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AI Trading SIGMA
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# =============================================================================
# AWS BEDROCK (Required for AI features)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================
# Choose exchange: "weex" or "binance"
EXCHANGE=weex

# WEEX Configuration
WEEX_API_KEY=your_weex_api_key_here
WEEX_API_SECRET=your_weex_api_secret_here
WEEX_TESTNET=true
WEEX_BASE_URL=

# Binance Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# =============================================================================
# TRADING SETTINGS
# =============================================================================
DEFAULT_SYMBOL=BTC/USDT:USDT
DEFAULT_LEVERAGE=10
DEFAULT_TIMEFRAME=5m
MAX_LEVERAGE=20

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05
MAX_OPEN_POSITIONS=3
KELLY_FRACTION=0.25

# =============================================================================
# STRATEGY PARAMETERS
# =============================================================================
# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MACD Settings
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Bollinger Bands
BB_PERIOD=20
BB_STD=2.0

# Monte Carlo
MC_SIMULATIONS=1000
MC_HORIZON=12
MC_CONFIDENCE=0.65

# =============================================================================
# SIGNAL GENERATION
# =============================================================================
SIGNAL_LONG_THRESHOLD=0.6
SIGNAL_SHORT_THRESHOLD=0.6
MIN_CONFIDENCE=0.55

# =============================================================================
# EXECUTION
# =============================================================================
TRADE_CYCLE_SECONDS=5
ORDER_TIMEOUT=30
MAX_SLIPPAGE=0.001

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///./trading_data.db

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
COMPLIANCE_LOG_DIR=logs/hackathon

# =============================================================================
# CORS (Frontend URLs)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
